{% extends 'base.html.twig' %}

{% block title %}Formulaire d'inscription{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="register">
        <div class="row justify-content-around">
            <img class="col-4 mt-5" src="{{ asset('build/images/Girl chatting remotely with group of three people.fbbd6367.svg') }}">
            <div class="col-4 mt-5">
            {{ form_start(registrationForm) }}
                <fieldset>
                    <div class="form-group row">
                        <label for="Fullname" class="col-sm-4 col-form-label">{{ form_row(registrationForm.fullname) }}</label>
                    </div>
                    <div class="form-group">
                        <label for="Email" class="form-label">{{ form_row(registrationForm.email) }}</label>
                    </div>
                    <div class="form-group">
                        <label for="Password" class="form-label">{{ form_row(registrationForm.password) }}</label>
                    </div>
                </fieldset>
                {{ form_end(registrationForm) }}
                <a class="btn btn-dark" href="{{ path('app_login') }}">Déjà inscrit ?</a>
            </div>
        </div>
    </div>






{% endblock %}
