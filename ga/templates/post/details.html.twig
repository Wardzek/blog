{% extends'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block main %}

    <div class="mt-5 row justify-content-center">
        <div class="col-4">
            <h1>{{ post.title }}</h1>
            <p>Le {{ post.createdAt|date('d-m-Y') }}</p>
            <span class="badge badge-pill badge-success">{{ post.level }}</span>
        </div>
        <div class="col-4">
            <img class="img-fluid rounded" src="{{ asset('uploads/image/' ~ post.image) }}" alt="Vroum vrouuum">
        </div>
    </div>
    <div>
        <p>{{ post.content | raw }}</p>
    </div>

{% endblock %}